<Window x:Class="FilmsApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FilmsApp"
        xmlns:col="clr-namespace:System.Collections;assembly=mscorlib"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <DataGrid Name="FilmsGrid" AutoGenerateColumns="False" Margin="0,0,263,130" ColumnWidth="*">
            <DataGrid.Columns>
                <!--Названия столбцов привязаны к названиям столбцов в DataTable "films"-->
                <DataGridTextColumn Header="Название" Binding="{Binding name}"/>
                <DataGridTextColumn Header="Оценка" Binding="{Binding rate}"/>
                <!--В столбце "Дата" даты выводятся в формате "yyyy-MM-dd"-->
                <DataGridTextColumn Header="Дата" Binding="{Binding fdate, StringFormat=\{0:yyyy-MM-dd\}}"/>
            </DataGrid.Columns>
        </DataGrid>
        <StackPanel Orientation="Vertical" Margin="100,167,377,71" RenderSize="50 50" RenderTransformOrigin="1.721,0.296">
            <Button x:Name="DeleteButton" Content="Удалить" IsDefault="True" Click="DeleteButton_Click" Width="322"/>
        </StackPanel>
    </Grid>
</Window>
